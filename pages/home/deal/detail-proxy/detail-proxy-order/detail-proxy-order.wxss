.container {
  background-color: rgb(252, 252, 252);
}

.consignee-info {
  background-color: white;
  margin-bottom: 40rpx;
}

.info-content {
  background-color: white;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.info-content text {
  font-size: 30rpx;
  line-height: 60rpx;
}

.deal-info {
  background-color: white;
  margin-bottom: 40rpx;
}

.delivery-address {
  background-color: white;
}

.change-text {
  color: #999;
}

.tip {
  text-align: center;
  height: 300rpx;
}

.tip text {
  font-size: 25rpx;
  line-height: 60rpx;
}

.bottom-bar {
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  border-top: solid 1rpx #ddd;
}

.totalPrice {
  background-color: rgb(252, 252, 252);
  width: 50%;
  text-align: center;
}

.totalPrice text {
  position: relative;
  top: 18rpx;
}

.confirmOrder {
  background-color: red;
  width: 50%;
  text-align: center;
}

.confirmOrder text {
  position: relative;
  top: 18rpx;
  color: white;
}
