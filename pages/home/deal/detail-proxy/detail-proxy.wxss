.container {
  /* 隐藏真机上x轴滚动条 */
  overflow-x: hidden;
  overflow-y: auto;
}

swiper {
  width: 100%;
  height: 500rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

.info-container {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.info-header {
  font-size: 35rpx;
}

.info-content {
  display: flex;
  flex-direction: column;
  position: relative;
  left: 25rpx;
  margin-top: 20rpx;
}

.info-content text {
  line-height: 60rpx;
}

.info-location {
  color: goldenrod;
  margin-top: 5rpx;
}

.bottom-bar {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background-color: rgba(252, 252, 252, 0.986);
  justify-content: space-around;
  align-items: center;
  position: fixed;
  bottom: 0px;
  border-top: solid 1rpx #ddd;
  z-index: 100;
}

.foot-block {
  height: 100rpx;
}

.bottom-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.like{
  position: relative;
  top:7rpx;
  left: 3rpx;
}

.bottom-item image {
  width: 60rpx;
  height: 60rpx;
}

.bottom-item text{
  font-size: 27rpx;
}

/* map组件不能被一般组件覆盖，即z-index对其无效，但可使用cover-view覆盖 */

map {
  margin-top: 5rpx;
  width: 100%;
  height: 240rpx;
}

.map-tip{
  background: #fff;
  width: 200rpx;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.map-tip-image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 5rpx;
}

.map-tip-content {
  font-size: 20rpx;
  color:black;
  margin-left: 9rpx;
}
